---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { slide } from "astro:transitions";
const { image, title = SITE_TITLE, description = SITE_DESCRIPTION, includeSidebar = true, sideBarActiveItemID } = Astro.props;

---

<!DOCTYPE html>
<html lang="en" class="">

  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class = ""  >
    <div class="drawer lg:drawer-open">
      
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content bg-base-100">
        <Header title={SITE_TITLE} />
        <div class="flex justify-center " transition:animate={slide()} >      
          <main class="p-4 lg:px-24" >   
            
            <slot />
          </main>
        </div>
        <Footer />
      </div>
      {includeSidebar && <SideBar sideBarActiveItemID={sideBarActiveItemID} class=""/>}
    </div>
  </body>
</html>
